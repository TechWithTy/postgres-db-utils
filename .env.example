# PostgreSQL Configuration
# Replace these values in production
POSTGRES_PASSWORD=testpassword
POSTGRES_USER=postgres
POSTGRES_DB=testdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Optional: Postgres SSL mode (disable, allow, prefer, require, verify-ca, verify-full)
POSTGRES_SSL_MODE=disable

# Optional: Connection pool settings
PG_MAX_CONNECTIONS=10
PG_IDLE_TIMEOUT=300 # seconds

# Optional: Database backup settings
PG_BACKUP_RETENTION_DAYS=7
PG_BACKUP_PATH=/backups